- conversation_url = person_transaction_url(@recipient, @url_params.merge({:id => @payment.transaction.id.to_s}))

%tr
  %td{:align => "left"}
    %font{body_font}
      = t("emails.new_payment.you_have_received_new_payment", :listing_title => @payment.transaction.listing.title, :payment_sum => humanized_money_with_symbol(@payment.total_sum), :payer_full_name => @payment.payer.name(@payment.community), :payer_given_name => @payment.payer.given_name_or_username).html_safe

%tr
  %td{:align => "left", :style => "padding: 10px 0;"}
    %table{:cellpadding => 5, :cellspacing => 0}
      %tbody
        %tr
          %td
            %b Tuote
          %td
            %b Hinta (alv 0)
          %td
            %b Alv
          %td
            %b Hinta yhteensä
        - @payment.rows.each do |row|
          %tr
            %td{:width => "150"}
              = row.title
            %td
              = row.sum.to_s + row.sum_symbol
            %td
              = row.vat.to_s + "%"
            %td
              = row.sum_with_vat.to_s + row.sum_symbol
        %tr
          %td
            = "Palvelumaksu (#{@payment.community.name('fi')})"
          %td
            = @payment.total_commission_without_vat.to_s + @payment.rows.first.sum_symbol
          %td
            = "#{APP_CONFIG.service_fee_tax_percentage}%"
          %td
            = @payment.total_commission.to_s + @payment.rows.first.sum_symbol
        %tr
          %td
            %b Saat yhteensä
          %td
          %td
          %td
            %b= @payment.seller_gets.to_s + @payment.rows.first.sum_symbol

= render :partial => "action_button", :locals => { :text => t("emails.conversation_status_changed.view_thread"), :url => conversation_url}
